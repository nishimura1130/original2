<h1>管理画面：ユーザー編集</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.user_name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, url: admin_user_path, method: :patch, local: true) do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>
  <%= f.label :user_email %>
  <%= f.email_field :user_email %>
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <%= f.label :パスワード確認 %>
  <%= f.password_field :password_confirmation %>
  <%= f.label :管理者権限 %>
  <%= f.select :admin, [["管理者","true"],["一般","false"]] %>
  <%= f.submit "更新" %>
<% end %>